<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <!-- 
    Default local maven repository is ~/.m2/repository
    Its recommended that student's use a fresh local maven repository.
    If you want to start and use a different local maven repository than your default, then uncomment and modifiy this next line -->
  <localRepository>/opt/maven/communityrepo</localRepository>

  <profiles>
    <profile>
            <id>mvnrepository</id>
            <repositories>
                <repository>
                    <id>mvnrepository</id>
                    <name>MVNRepository</name>
                    <url>http://mvnrepository.com/artifact</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>mvnrepository</id>
                    <name>MVNRepository</name>
                    <url>http://mvnrepository.com/artifact/</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
    <!--activeProfile>mvnrepository</activeProfile -->
  </activeProfiles>

</settings>
